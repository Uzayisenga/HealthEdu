
  <center>
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="book border">
      <div class="form-group col-sm-10"><br>
        <%= form.text_field :book_name, class:"form-control", placeholder:"Enter Book Name", :required => true  %>
      </div>

      <div class="form-group col-sm-10">
        <%= form.text_field :author_name, class:"form-control", placeholder:"Enter Author Name", :required => true  %>
      </div>

      <div class="form-group col-sm-10">
        <%= form.file_field :image, class:"form-control", placeholder:"Insert Image" %>
      </div>

      <div class="form-group col-sm-10">
        <%= form.text_area :summary, class:"form-control", placeholder:"Enter Summary Book", :required => true  %>
      </div>

      <div class="form-group col-sm-10">
        <%= form.file_field :book, class:"form-control", placeholder:"Upload book files" %>
      </div>

      <div class="actions">
        <%= form.submit "Create book", class:"btn btn-success", style:"width:80%" %>
      </div>
    <% end %>
  </div>
</center>


                                                       <% if course.user.profile == nil %>
                                                           <%= image_tag 'default.png', :alt => "courses-image1 feed" %>
                                                       <% else %>
                                                       <% if course.user.profile.image? %>        
                                                            <%= image_tag course.user.profile.image.url, :alt => "courses-image1 feed" %>  
                                                            <% end %> 
                                                       <% end %>
                                                       <span><%= course.user.names%>&nbsp;<%= course.user.last_name%></span>

                                                  </div>
                                                  <div class="courses-price">
                                                       <a href="#"><span>RWfs <%= course.course_price%></span></a>
                                                  </div>
                                             </div>
                                        </div>
                                   </div>

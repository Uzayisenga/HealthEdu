                                                       <% end %>
                                                  </div>
                                                  <div class="courses-date">
                                                       <span><i class="fa fa-calendar"></i> <%= course.created_at %></span>
                                                       <span><i class="fa fa-clock-o"></i>
                                                            <% start_time = course.created_at %>
                                                            <% end_time   =  DateTime.now %>
                                                            <%= distance_of_time_in_words(start_time, end_time)  %>
                                                       </span>
                                                  </div>
                                             </div>

                                             <div class="courses-detail">
                                                  <h3 style="text-transform: capitalize;"><%= course.title%>&nbsp - <%= course.credit_number %>Credits</b></h3>
                                                  <p><%= course.content[0,100]..%></p>
                                                  <%= link_to 'Start Now', course, style:'font-weight:bolder;color:#81c784;background:white;padding:8px;border:1px;border-style:solid;border-color:#81c784' %>
                                             </div>


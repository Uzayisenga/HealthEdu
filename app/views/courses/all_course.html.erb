

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('/assets/bg_1.jpg')">
        <div class="container">
          <div class="row align-items-end">
            <div class="col-lg-7">
              <h2 class="mb-0">Courses</h2>
              <p>Increase your knowledge and get certificate</p>
            </div>
          </div>
        </div>
      </div>


    <div class="custom-breadcrumns border-bottom">
      <div class="container">
        <%= link_to "Home", homepage_index_path,:"data-no-turbolink"=>true,method:"get" %>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Courses</span>
      </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row">
            <% @courses.each do |course| %>
                <div class="col-lg-4 col-md-6 mb-4">
                      <div class="course-1-item">
                          <figure class="thumnail">
                          <a href="">
                          <% if course.image_url %>
                            <%= image_tag course.image_url,:alt => "doctor feed",class:'card-image'%>
                          <% end %>
                          </a>
                          <div class="price"><%= course.course_price%>&nbsp;Frws</div>
                          <div class="category"><h3><i class="fa fa-calendar"></i> Updated
                          <% start_time = course.created_at %>
                          <% end_time   =  DateTime.now %>
                          <%= distance_of_time_in_words(start_time, end_time)  %></h3></div>
                          </figure>
                          <div class="course-1-content pb-4">
                          <B>Instructor:</B><%= course.user.names%>  <%=course.user.last_name%><br>
                          <h2><%= course.title%>/<%= course.credit_number%>CPD credits</h2>

                          <p class="desc mb-4"><%= course.content_attract.truncate(75)%>
                          <p><%= link_to 'Enroll In This Course', course, class:"btn btn-primary rounded-0 px-4",:"data-no-turbolink"=>true,method:"get" %></p>
                          </div>
                      </div>
                </div>
              <% end %>
            </div>
        </div>
    </div>

    <!-- ============================ Full Width Courses  ================================== -->
    <section class="gray">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 col-md-6 col-sm-12">
            <div class="sec-heading center">
              <h2>We have <span class="theme-cl"><%= Course.count %></span> Courses for you </h2>
            </div>
          </div>
        </div>

        <div class="row">
          <% @courses.each do |course| %>

            <!-- Cource Grid 1 -->
            <div class="col-lg-4 col-md-6">
              <div class="education_block_grid style_2">

                <div class="education_block_thumb n-shadow">
                  <a href="single.html" data-toggle="modal" data-target="#login">
                  <% if course.image_url %>
                    <%= image_tag course.image_url,:alt => "",class:'img-fluid'%>
                  <% end %></a>
                  <div class="cources_price"><%= course.course_price%><span class="theme-cl"> Rwf</span></div>
                </div>

                <div class="education_block_body">
                  <h4 class="bl-title"><a href="single.html" data-toggle="modal" data-target="#login"><%= course.title%></a></h4>
                </div>

                <div class="cources_info_style3">
                  <ul>
                    <li><i class="ti-star mr-1"></i><%= course.credit_number%> CPD Credits</li>
                  </ul>
                </div>

                <div class="education_block_footer">
                  <div class="education_block_author">
                    <div class="path-img"><a href="instructor-detail.html"><img src="assets/img/gihozo.jpg" class="img-fluid" alt=""></a></div>
                    <h5><a href="#"> <%= course.user.names%>  <%=course.user.last_name%></a></h5>
                  </div>
                  <div class="foot_lecture"><i class="ti-control-skip-forward mr-2"></i>8 Hours</div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </section>


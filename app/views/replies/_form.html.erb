      <ul>
        <% reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class:"form-control" %><br>
  </div>

  <div class="field">
  <%  if user_signed_in? %>
  <%= form.hidden_field :user_id, value: current_user.id%>
  <%end%>
  </div>

  <div class="field">
  <%= form.hidden_field :comment_id, :value => params[:comment_id] %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

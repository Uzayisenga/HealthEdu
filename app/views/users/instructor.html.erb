<!-- Search form -->
<div class="search">
<input class="form-control" type="text" placeholder="Search" aria-label="Search">
</div>
<div class="sidebar">
  <a class="active"<%= link_to 'Instructors List', instructor_path %></a>
  <a <%= link_to 'Professionals List', professional_path %></a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
</div>

<!-- Page content -->
<div class="content">
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Working_place</th>
    <th>Email</th>
    <th>Reguratory Body</th>
    <th>Level</th>
    <th>District</th>
    <th>Gender</th>
    <th>Apload_diploma</th>
    <th>Apload_cv </th>
    <th>Image</th>
    <th>Phone</th>

  </tr>
</thead>

<tbody>

<% @instructors.each do |instructor| %>
 <tr>
    <td><%= instructor.names %></td>
    <td><%= instructor.working_place %></td>
    <td><%= instructor.email %></td>
    <td><%= instructor.reguratory_body %></td>
    <td><%= instructor.level %></td>
    <td><%= instructor.district %></td>
    <td><%= instructor.gender %></td>
    <td><%= link_to "Download", instructor.apload_diploma_url %></td>
    <td><%= link_to "Download", instructor.apload_cv_url %></td>
    <td><% if instructor.image_url %>
        <%= image_tag instructor.image_url, style:"width:100px;height:100px;" %></td>
    <% end %>
    <td><%= instructor.phone %></td>
 </tr>
<% end %>
</tbody>
</table>
</div>
</div>
<div class="tank">
  <div class ="menu">
    <ul class="list">
      <li><%= link_to 'Instructors List', instructor_path %></li>
      <li><%= link_to 'Professionals List', professional_path %></li>
    </ul>
  </div>
  <div class="courses">
  <h2>All Courses</h2>
  <hr class="hr">
  <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Working_place</th>
      <th>Email</th>
      <th>Reguratory Body</th>
      <th>Level</th>
      <th>District</th>
      <th>Gender</th>
      <th>Working_place</th>
      <th>Apload_diploma</th>
      <th>Apload_cv </th>
      <th>Image</th>
      <th>Phone</th>
      <th>Courses</th>
    </tr>
  </thead>

  <tbody>
  
    <% @instructors.each do |instructor| %>
      <tr>
           <td><%= instructor.names %></td>
           <td><%= instructor.working_place %></td>
           <td><%= instructor.email %></td>
           <td><%= instructor.reguratory_body %></td>
           <td><%= instructor.level %></td>
           <td><%= instructor.district %></td>
           <td><%= instructor.gender %></td>
           <td><%= instructor.working_place %></td>
           <td><%= instructor.apload_diploma %></td>
           <td><%= instructor.apload_cv %></td>
           <td><%= instructor.image if instructor.image %></td>
           <td><%= instructor.phone %></td>
           <td><%= instructor.courses.count %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
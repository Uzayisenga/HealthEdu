<div class="site-section ftco-subscribe-1 site-blocks-cover pb-0" style="background-image: url('/assets/bg_1.jpg')">
        <div class="container">
          <div class="row align-items-end">
            <div class="col-lg-7">
              <h2 class="mb-0"><%= @user.names %> <%= @user.last_name%></h2>
              <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
            </div>
          </div>
        </div>
      </div>


    <div class="custom-breadcrumns border-bottom">
      <div class="container">
        <%= link_to "Home", homepage_index_path,:"data-no-turbolink"=>true,method:"get" %>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <%= link_to "Courses", all_course_courses_path,:"data-no-turbolink"=>true,method:"get" %>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">User</span>
      </div>
    </div><br>
    <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Reguratory Body</th>
      <th>Level</th>
      <th>District</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Professional Category</th>
      <th>Number of requested courses</th>
      <th>Total # of modules</th>


    </tr>
  </thead>

  <tbody>
    <tr>
        <td><%= @user.names %></td>
        <td><%= @user.email %></td>
        <td><%= @user.reguratory_body %></td>
        <td><%= @user.level %></td>
        <td><%= @user.district %></td>
        <td><%= @user.gender %></td>
        <td><%= @user.phone %></td>
        <td><%= @user.working_place %></td>
        <td><%= @user.favorites.count %></td>

        <% credit = 0 %>
           <% @user.favorites.each do |pro| %>
            <% credit += pro.course.credit.count %>
            <% end %>
           <td><%= Credit %></td>
    </tr>
    </tbody>
</table>
<h1> All requested courses</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>

    <th>Date</th>
      <th>title</th>
      <th>Number of credits</th>
      <th>Instructor</th>
      <th>Institution organizer</th>
      <th>Venues</th>
      <th>Signature and Stamp of provider</th>
    </tr>
  </thead>

  <tbody>
  <% @user.favorites.each do |favorite| %>
    <tr>
    <td><%= favorite.created_at %></td>
        <td><%= favorite.course.title %></td>
        <td><%= favorite.course.credit.count %></td>
        <td><%= favorite.course.user.names %></td>
        <td>HealthEdu LTD</td>
        <td>HealthEdu LTD</td>
        <td> </td>
    </tr>
    <% end %>
    </tbody>
</table>

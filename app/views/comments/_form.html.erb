<section class="bg-light">
				<div class="container">
        <div class="edu_wraper">
        <h2 class="ed_title">Leave Comment or Question Here</h2>
        <%= form_for([@course, @course.comments.build]) do |form| %>
          <% if comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
    
              <ul>
                <% comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
    
          <div class="field">
            <%= form.label :content %>
            <%= form.text_area :content, class:"form-control", placeholder:Type your Question or Comment Here"> %><br>
          </div>
    
          <div class="field">
          <%  if user_signed_in? %>
          <%= form.hidden_field :user_id, value: current_user.id%>
          <%end%>
          </div>
    
          <div class="field">
            <%= form.hidden_field :course_id%>
          </div>
    
          <div class="actions">
            <%= form.submit class:"btn btn-sm btn-success" %>
            <%= link_to 'Back', course_comments_path,class:"btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
				</div>
			</section>
			<!-- ============================ Hero Banner End ================================== -->



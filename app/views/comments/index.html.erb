<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
     
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.course_id %></td>
        <%if current_user.id==comment.user_id %>
        <td><%= link_to 'Edit', [comment.course, comment], method: :edit%></td>
        <td><%= link_to 'Delete', [comment.course, comment], method: :delete, data: { confirm: 'Are you sure?' }%></td>
         <td><%= link_to 'reply', new_reply_path(:comment_id => comment.id), :"data-no-turbolink" => true, method: "get"  %></td>
         <% end %>
         <% comment.replies.each do |reply| %>
          <tr><td><%=reply.content%></td></tr>
          <%end%>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_course_comment_path %>


<div class="row" >
  <div class="col-75">
    <div class="container" style='border: 1px solid lightgrey;width: 80% ;position: center;'>
    <h2> Sign Up </h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>
    

        <div class="row">
          <div class="col-50">
            
            <i class="fa fa-envelope"></i> <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            <i class="fa fa-user"></i><%= f.label :first_name %> 
            <%= f.text_field :names, class:"form-control" %>
            <i class="fa fa-user"></i><%= f.label :last_name %> 
            <%= f.text_field :last_name, class:"form-control" %>
            <i class="fa fa-key icon"></i>
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            <i class="fa fa-key icon"></i> <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            
           

            <div class="row">
             
              <div class="col-50">
              <%= f.label :gender %> :<br>
              <%= f.radio_button :gender, 'Male' %> Male <%= f.radio_button :gender, 'Female' %> Female
              </div>
            </div>
          </div>
          <div class="col-50">
           
            <div class="icon-container">
              
            </div>
            
            <i class="fa fa-phone"></i><%= f.label :Phone %>
            <%= f.number_field :phone, class:"form-control" %>
            <i class="fa fa-institution"></i><%= f.label :district %>
            <%= f.text_field :district, class:"form-control" %>
            <%= f.select :reguratory_body, options_for_select([
                  ["Regulatory Body:", ""], 
                  "RAHPC", 
                  "NPC", 
                  "RMDC", 
                  "NCNM"]), 
                  {}, { class: "form form-group form-control" } %>
            <%= f.label :upload_diploma %>
            <%= f.file_field :apload_diploma, class:"form-control" %>
            <%= f.label :upload_cv %>
            <%= f.file_field :apload_cv, class:"form-control" %><br><br>
             <div class="row">
              <div class="col-50">
                <%= f.select :level, options_for_select([
                  ["Upload your
                  Certicate", ""], 
                  "certificate(A2)", 
                  "Advanced_Diploma", 
                  "Bachelor_Degree", 
                  "Masters_Degree",
                  "PHD",
                  "Others"]), 
                  {}, { class: "form form-group form-control" } %>
                </div>
                <div class="col-50">
                <%= f.select :working_place, options_for_select([
                  ["Anaesthesia Practitioner", ""], 
                  "Biomedical Engineer", 
                  "Medical Laboratory Practitioner", 
                  "BOccupational Therapist", 
                  "Dental Therapist",
                  "Nutritionist",
                  "Environmental Health_Professional",
                  "Clinial Psychologist", 
                  "Chiropractor", 
                  "Clinical Medicine Practitioner", 
                  "Speech and Language Pathologist",
                  "Clinical Perfusionist",
                  "Emergency Care Practitioner",
                  "Physiotherapist", 
                  "Medical Imaging Practitioner", 
                  "Prosthetists and Orthotist", 
                  "Orthopeadic Clinical Officer", 
                  "Public Health Practitioner",
                  "Ophthalmic Clinical Officer",
                  "Social Work Practitioner",
                  "Optometry Practitioner", 
                  "Theatre Operating Therapist", 
                  "Nurse", 
                  "Midwife",
                  "Medical Doctor (GP)",
                  "Dental Surgion",
                  "Emergency Care Practitioner",
                  "Physiotherapist",
                  "Ophthalmologist", 
                  "Pathologist", 
                  "Oncologist", 
                  "Orthopaedic Surgeon",
                  "Cardiologist",
                  "Neurosurgeons",
                  "Radiologists ", 
                  "Internists practitioners", 
                  "Pharmacists", 
                  "Others"]), 
                  {}, { class: "form form-group form-control" } %>
                </div>
                <div class="col-50">
                <%= f.select :user_role, options_for_select([
                  ["professional", ""], 
                  "admin", 
                  "instructor", 
                  "council"]), 
                  {}, disabled: (true unless current_user && current_user.user_role == 'admin') %>
              </div>
            </div>
          </div>

        </div>
    
        <div class="actions">
        <%= f.submit "Sign up", :"data-no-turbolink"=>true,method:"get" %>
      </div>
    <% end %>
    
    
    </div>
  </div>

  </div>



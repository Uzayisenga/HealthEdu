<div class="container" style='margin:100px'>
      <div class="row">
      <h2 style="text-align:center">Login with Social Media or Manually</h2>
      
      

      <div class="col">
     
      
      <%= link_to "f Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-primary"%>
      <%= link_to 'G+  Login with Google +', user_google_omniauth_authorize_path, class:"btn btn-danger" %>
      <button type="button" class="btn btn-info"><i class="fab fa-linkedin-in pr-1"></i> Login with Linkedin</button>
        
      </div>

      <div class="col">
        <div class="hide-md-lg">
          <p>Or sign in manually:</p>
        </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>


 
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
    

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

</div>
</div><br>
<div class="bottom-container">
  <div class="row">
    <div class="col">
    <%= render "devise/shared/links" %>
    </div>
    
  </div>
</div>



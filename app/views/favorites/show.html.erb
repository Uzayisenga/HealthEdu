<div class="container"
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @favorite.course.title %>
</p>

<p>
  <strong>Buyer:</strong>
  <%= @favorite.user.email %>
</p>

<p>
  <strong>Uploaded by:</strong>
  <%= @favorite.course.user.email %>
</p>
<% if @favorite.status == "paid" %>
<p>
<h3 class="card-title"><b>Modules course of <%= @favorite.course.title %></b></h3>
  <hr class="hr">
  
      
<% @favorite.course.credits.each do |credit| %>
  <div class="module">
 

  <i class="fa fa-file-pdf-o fa_custom"></i><%= link_to credit.name, credit_path %>
  <%= link_to "Download", credit.upload_file_url %>
  </div><br>


<% end %>
</p>

<% else %>
<p>
<h2>Please pay <%= @favorite.course.course_price %> RWF on 0787939119 to access all modules</h2>
</p>
<% end %>

<%= link_to 'Back', favorites_path %>
</dev>

<% if user_signed_in? && current_user.user_role== 'admin'%>
        <li class="nav-item">
          <%= link_to "Admin Panel",  rails_admin.dashboard_path, class: "nav-link" %>
        </li>
     <% end %>
     <% if user_signed_in? && current_user.user_role== 'instructor'%>
        <li class="nav-item">
        <%= link_to 'Instractor Panel', courses_path, class: "nav-link" %>
        </li>
     <% end %>
     <% if user_signed_in? && current_user.user_role== 'council'%>
        <li class="nav-item">
        <%= link_to 'Check', instructor_path, class: "nav-link" %>
        </li>
     <% end %>
     
    </ul>
    <div class="w-25 d-flex">
      <% if user_signed_in? %>
        <strong><%= current_user.email %></strong>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-success btn-sm" %>
      <% else %>
        <%= link_to "Log in",  new_user_session_path, class: "btn btn-outline-success btn-small" %>
      <% end %>
    </div>

  </div>
</nav>
    <% if notice %>
      <p class="alert alert-success", style='margin:90px'><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger", style='margin:90px'><%= alert %></p>
    <% end %>
 <%= yield %>
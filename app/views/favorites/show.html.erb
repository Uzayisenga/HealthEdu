            <div class="ed_detail_head">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-lg-4 col-md-5">

							<div class="property_video">
								<div class="thumb">
									<% if @favorite.course.image_url %>
									   <%= image_tag @favorite.course.image_url,:alt => "",class:'pro_img img-fluid w100'%>
									<% end %>
								</div>
							</div>

						</div>

						<div class="col-lg-8 col-md-7">
							<div class="ed_detail_wrap">
								<div class="ed_header_caption">
									<h2 class="ed_title"><%= @favorite.course.title %></h2>
								</div>
								<div class="ed_header_short">
									<h4 class="edu_title">Course Overview</h4>
									<p><%= @favorite.course.content.html_safe %></p>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- ============================ Page Title End ================================== -->

			<!-- ============================ Course Detail ================================== -->
			<section class="bg-light">
				<div class="container">
					<div class="row">

						<div class="col-lg-12 col-md-12">

							<!-- Overview -->

							<div class="edu_wraper">
                            <h4 class="edu_title">Course Circullum</h4>

								<div id="accordionExample" class="accordion shadow circullum">
                                    <% @favorite.course.credits.each do |credit| %>
										<!-- Part 1 -->
										<div class="card">
										<div id="headingOne" class="card-header bg-white shadow-sm border-0">
											<h6 class="mb-0 accordion_title"><a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="d-block position-relative text-dark collapsible-link py-2"><%=  credit.name%>: Learn More </a></h6>
										</div>
										<div id="collapseOne" aria-labelledby="headingOne" data-parent="#accordionExample" class="collapse show">
											<div class="card-body pl-3 pr-3">
												<p><%=  credit.discription.html_safe%></p>
												<div class="form-group  ">
										        <%= link_to "click here to Open this Module", credit.upload_file_url,class:"bg-red btn", target: :_blank %>
												</div>
											</div>
										</div>
										</div>
                                    <% end %>
									<div class="card">
									    <div id="headingFour" class="card-header bg-white shadow-sm border-0 text-center">
											<% if ((DateTime.now.to_time - @favorite.created_at.to_time)/1.hours).to_i > 1%>
												<a href="<%= @favorite.course.quiz_link%>" target="_blank" rel="noopener noreferrer" class= "bg-red btn">Do assessment for this course</a>
												<span class="menu-collapsed"><%= link_to 'Back', all_favorite_path %>
											<% end %>

									    </div>
									</div>
								</div>
							</div>


							<!-- Forum start -->
							<div class="container">
					<!-- ============================ Questions ================================== -->
					<!-- Submit Reviews -->
							<div class="edu_wraper">
								<h2 class="ed_title">Thank you for taking this course ,if you have any issue, we are here for you. click here</h2>
								
							<div class="list-single-main-item-title fl-wrap" id="Ask">
								<h4><span class="text-center icona" data-toggle="collapse" data-target="ask" aria-expanded="false" aria-controls="Ask" ><i class="fa fa-edit" aria-hidden="true"></i></span> <span class="text-center"><%= link_to 'Ask a question', new_course_comment_path(@favorite)%><i  class="fa fa-arrow-left" aria-hidden="true"></i> <%= link_to 'View Questions', course_comments_path(@favorite)%></span></h4>
										
							</div>
							</div>
							<!-- Forums End -->


							<!-- instructor -->
							<div class="single_instructor">
								<div class="single_instructor_caption">
									<h4><a href="#"><%= @favorite.course.user.names%>  <%=@favorite.course.user.last_name%></a></h4>
									<ul class="instructor_info">
										<li><i class="ti-control-forward"></i>12 Courses</li>
										<li><%= link_to 'Ask Question', new_course_comment_path(@favorite)%></li>
										<li><%= link_to 'View Questions', course_comments_path(@favorite)%></li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>





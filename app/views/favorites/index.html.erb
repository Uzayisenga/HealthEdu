<div class="container">
<p id="notice"><%= notice %></p>
<h1>Favorites</h1>
<% @favorites.each do |favorite| %>
    <%if favorite.user.names == current_user.names %>
    <%if favorite.present?%>
<!-- Card -->
<div class="card">


  <!-- Card content -->
  <div class="card-body">
  
   
    <p> <%= favorite.course.user.email %></p>
    <h4 class="card-title"><%= favorite.course.title %></h4>

    <p>
      <h5>Modules of this course</h5>
     <%= favorite.course.credits.each do |credit| %>
      
      <%= credit.name %><br>
      <%= credit.upload_file %><br>
      <%= credit.video %><br>
      <% end %>
      </p> 
    
   <%else%>
     <p>No favorite yet.</p>
   

  
    
  <% end %>
  </div><br>
  </div></br>
  
<%end%>
<%end%>
  
  </div>
  
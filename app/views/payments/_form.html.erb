<div class="container">
<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %><br>
  </div>

  <div class="field">
    <%  if user_signed_in? %>
    <%= form.hidden_field :user_id, value: current_user.id%>
    <%end%>
  </div>

  
  <div class="field">
    <%= form.hidden_field :course_id, :value => params[:course_id] %></br>
  </div>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>

<% if user_signed_in? && current_user.user_role== 'admin'%>
        <li class="nav-item">
          <%= link_to "Admin Panel",  rails_admin.dashboard_path, class: "nav-link" %>
        </li>
     <% end %>
     <% if user_signed_in? && current_user.user_role== 'instructor'%>
        <li class="nav-item">
        <%= link_to 'Instractor Panel', courses_path, class: "nav-link" %>
        </li>
     <% end %>
     <% if user_signed_in? && current_user.user_role== 'council'%>
        <li class="nav-item">
        <%= link_to 'Check', instructor_path, class: "nav-link" %>
        </li>
     <% end %>
     
    </ul>
    <div class="w-25 d-flex">
      <% if user_signed_in? %>
        <strong><%= current_user.email %></strong>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-success btn-sm" %>
      <% else %>
        <%= link_to "Log in",  new_user_session_path, class: "btn btn-outline-success btn-small" %>
      <% end %>
    </div>

  </div>
</nav>
    <% if notice %>
      <p class="alert alert-success", style='margin:90px'><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger", style='margin:90px'><%= alert %></p>
    <% end %>
 <%= yield %>